<?xml version="1.0"?>
<object name="portal_controlpanel" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="sc.base.uploader">

 <!-- Show our configlet -->
 <configlet title="Multiple Files Upload"
            action_id="uploader-config"
            appId="sc.base.uploader"
            category="Products"
            conditional_expression=""
            url_expr="string:${portal_url}/@@uploader-controlpanel"
            icon_expr="string:${portal_url}/++resource++quickupload_static/upload.png"
            i18n:attributes="title"
            visible="True">
   <permission>Manage portal</permission>
 </configlet>
 <!-- Hide links to products configlets -->
 <configlet title="Quick Upload" 
            action_id="QuickUpload" 
            visible="False" />
 
 <configlet title="ZipFileTransport"
            action_id="ZipFileTransport"
            visible="False" /> 
</object>
